{
  "name": "tenji",
  "version": "1.0.3",
  "description": "Converts Japanese text and 点字.",
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "scripts": {
    "build": "npm-run-all build:tsc build:table",
    "build:table": "node ./dist/build/index.js",
    "build:tsc": "tsc",
    "clean": "rimraf dist",
    "test": "node run-jasmine.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:tsc": "tsc --watch",
    "watch:test": "mkdirp dist && watch 'node run-jasmine.js' dist/ --wait=0.2 --verbose"
  },
  "keywords": [
    "tenji",
    "点字",
    "Braille"
  ],
  "author": "uhyo",
  "license": "MIT",
  "devDependencies": {
    "@types/jasmine": "^4.3.5",
    "@types/node": "^20.4.4",
    "jasmine": "^5.1.0",
    "jasmine-spec-reporter": "^7.0.0",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "watch": "^1.0.2"
  }
}
